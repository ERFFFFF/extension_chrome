{
  "name": "StreamJerk",
  "description": "Chrome Extension used for notifications & checkings for chaturbate streamers.",
  "manifest_version": 3,
  "version": "1.1.0",
  "icons": {
    "16": "bonk16.png",
    "48": "bonk48.png",
    "128": "bonk128.png"
  },
  "action": {
    "default_icon": {
      "16": "bonk16.png",
      "48": "bonk48.png",
      "128": "bonk128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "notifications",
    "storage"
  ]
}