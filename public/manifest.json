{
  "name": "StreamJerk",
  "description": "Chrome Extension used for notifications & checkings for chaturbate streamers.",
  "manifest_version": 2,
  "version": "1.1.0",
  "icons": {
    "16": "bonk16.png",
    "48": "bonk48.png",
    "128": "bonk128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "bonk16.png",
      "48": "bonk48.png",
      "128": "bonk128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "notifications",
    "storage"
  ]
}